<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">	
    <head>
		<title>Storelocator</title>
		<meta name="description" content="Storelocator Details"/>    
		<css src="Amasty_Storelocator::css/storedetail.css" />
	</head>
	<body>
		<referenceBlock name="breadcrumbs">
             <action method="addCrumb">
                 <argument name="crumbName" xsi:type="string">home</argument>
                 <argument name="crumbInfo" xsi:type="array">
                     <item name="title" xsi:type="string" translate="true">Home</item>
                     <item name="label" xsi:type="string" translate="true">Home</item>
                     <item name="link" xsi:type="string">/</item>
                 </argument>
             </action>
             <action method="addCrumb">
             <argument name="crumbName" xsi:type="string">Storelocator</argument>
                 <argument name="crumbInfo" xsi:type="array">
                     <item name="title" xsi:type="string" translate="true">Storelocator</item>
                     <item name="label" xsi:type="string" translate="true">Storelocator</item>
                 </argument>
             </action>
         </referenceBlock>
         <referenceContainer name="content">
        	<block class="Dolphin\Core\Block\Details" name="amlocatorDetailsnew" template="Amasty_Storelocator::details.phtml" />
    	</referenceContainer>    	
    </body>	
</page>